@import 'nib'
@import '_sanitize'
@import '_variables'
@import '_forms'
@import '_buttons'
@import '_media'

@import url('//fonts.googleapis.com/css?family=Lato:400,700');

html
  font-size 62.5% // 10px
  box-sizing border-box

html
body
  width 100%
  height 100%

body
  font-family 'Lato', 'Avenir Next', Avenir, Helvetica, Arial, sans-serif

hr
  margin-top 1.5rem
  margin-bottom 1.5rem
  border 0
  border-top 1px solid HR_COLOR

.clearfix
  clearfix()

button
  -webkit-tap-highlight-color transparent
  outline 0

#app
  background-color #333
  color #fff
  position relative
  width 100%
  height 100%

#config
  position fixed
  width 320px
  height 100%
  background-color rgba(0, 0, 0, .9)
  box-shadow 4px 0 8px rgba(0, 0, 0, .2)

  transition left .25s ease

  &.open
    left 0
  &.close
    left -320px

  .btn
    color #fff

.config__container
  max-height 100%
  overflow auto

  label
    color #999
  hr
    border-top 1px solid #666

.config__heading
  text-align center
  background-color #222
  padding 8px 15px
  border-top 1px solid rgba(255, 255, 255, .1)
  border-bottom 1px solid rgba(0, 0, 0, .8)
  text-transform uppercase

.config__body
  padding 10px 15px
  box-shadow -1px 0 1px inset rgba(0, 0, 0, .8)

.config__toggle
  position absolute
  background-color rgba(0, 0, 0, .8)
  left 100%
  top 4px
  color #999
  font-size 2.4rem
  border-radius 0 4px 4px 0
  padding 8px 4px

.screen
  background url(../images/bg-tom.png) repeat #000
  position absolute
  top 50%
  left 50%
  box-shadow 0 0 4px rgba(0, 0, 0, .6)
  overflow hidden

.screen--black
  background-color #101010

.screen__reactions
  position absolute
  display table
  width 100%

.screen__reactions--bottom
  bottom 0
  padding 0 50px 20px

.reaction
  display table-cell
  padding 10px

.reaction__media
  display block
  text-align center
  width 100%
  background-color #fff
  border-radius 2px
  white-space nowrap

.reaction__emoji
  display inline-block
  vertical-align middle
  padding 8px
  img
    max-width 36px
    height auto

.reaction__counter
  display inline-block
  vertical-align middle
  padding 8px
  font-size 3.6rem
  color #222
  font-weight 700
